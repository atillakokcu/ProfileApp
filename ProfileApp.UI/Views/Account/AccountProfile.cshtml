@model ProfileApp.Dto.TblUserDtos.TblUserListDto
@{
    Layout = "_Layout";
}

<link href="\css\stylesheet.css" rel="stylesheet" />

<form method="post" enctype="multipart/form-data">
    <link href="\css\stylesheet.css" rel="stylesheet" />
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.Password" />
    <input type="hidden" asp-for="@Model.ImageUrl" />
    <div class="container light-style flex-grow-1 container-p-y">

        <h4 class="font-weight-bold py-3 mb-4">
            Account settings
        </h4>

        <div class="card overflow-hidden">
            <div class="row no-gutters row-bordered row-border-light">
                <div class="col-md-3 pt-0">
                    <div class="list-group list-group-flush account-settings-links">
                        <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account-general">General</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list">Change password</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list" asp-action="SocialLink" asp-controller="Account">Social links</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list" asp-action="Logout" asp-controller="Account">Logout</a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-general">

                            <div class="card-body media align-items-center">
                                @if (Model.ImageUrl!=null)
                                {
                                    <img src="@Model.ImageUrl" asp-append-version="true" alt="" class="d-block ui-w-80">
                                }
                                else
                                {
                                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="d-block ui-w-80">
                                }
                               
                                <div class="media-body ml-4">
                                    <label class="btn btn-secondary">
                                        Upload new photo
                                        <input type="file" name="formfile" class="account-settings-fileinput">
                                    </label> &nbsp;

                                    <div class="text-light small mt-1">Allowed JPG, GIF or PNG. Max size of 800K</div>
                                </div>
                            </div>
                            <hr class="border-light m-0">
                            <hr class="border-light m-0">

                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label">Username</label>
                                    <input type="text" class="form-control mb-1" asp-for="@Model.Username">
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Username)</span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" asp-for="@Model.Name">
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Name)</span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Surname</label>
                                    <input type="text" class="form-control" asp-for="@Model.Surname">
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Surname)</span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">E-mail</label>
                                    <input type="text" class="form-control mb-1" asp-for="@Model.MailAdress">
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.MailAdress)</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-right mt-3">
            <button type="submit" class="btn btn-primary" asp-action="AccountProfile" asp-controller="Account">Save</button>&nbsp;
            <a asp-action="Profile" asp-controller="UserProfile" asp-route-Id="@Model.UserNamGuidId" target="_blank" class="instagram-profile-button">See My Profile</a>

        </div>
    </div>
</form>



