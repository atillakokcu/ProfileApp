@using ProfileApp.Dto.TblUserAccountDtos
@model TblUserAccountUpdateDto


@{
    Layout = "_Layout";
}

<link href="\css\stylesheet.css" rel="stylesheet" />
<link href="\css\stylesheet.css" rel="stylesheet" />
<div class="container light-style flex-grow-1 container-p-y">

    <h4 class="font-weight-bold py-3 mb-4">
        Account settings
    </h4>

    <div class="card overflow-hidden">
        <div class="row no-gutters row-bordered row-border-light">
            <div class="col-md-3 pt-0">
                <div class="list-group list-group-flush account-settings-links">
                    <a class="btn btn-warning" asp-action="AccountProfile" asp-controller="Account">Back to Homepage</a>
                    <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account-social-links">Social links</a>
                </div>
            </div>
            <form method="post">
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-social-links">
                            <div class="card-body pb-2 ">



                                <div class="form-group">
                                    <input type="text" class="form-control" asp-for="@Model.AccountName" placeholder="Account Name Instagram/Tiktok...">
                                    <input type="text" class="form-control" asp-for="@Model.AccountUrl" placeholder=" Account Url www.instagram/....">
                                    <input type="hidden"  asp-for="@Model.Id" >
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-right mt-3">
                        <button type="submit" asp-action="UpdateSocialAccount" asp-controller="Account" class="btn btn-primary">Add Social Account</button>&nbsp;
                        <a type="button" href="/Account/SocialLink" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>



</div>